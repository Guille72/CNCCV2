{% trans_default_domain 'FOSUserBundle' %}

<div class="row card-padding">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register col s12'}}) }}
    <div class="row">
        <div class="input-field col s6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="input-field col s6">
            {{ form_row(form.username) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            {{ form_row(form.email) }}
        </div>
        <div class="input-field col s6">
            {{ form_row(form.tel) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            {{ form_row(form.address) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            {{ form_row(form.city) }}
        </div>
        <div class="input-field col s6">
            {{ form_row(form.zip) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            {{ form_row(form.plainPassword.first) }}
        </div>
        <div class="input-field col s6">
            {{ form_row(form.plainPassword.second) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            {{ form_row(form.birthdate) }}
        </div>
        <div class="input-field col s6 if">
            {{ form_row(form.imageFile) }}
        </div>
    </div>

    {{ form_widget(form) }}
    <div class="row">
        <button class="waves-effect waves-light btn blue darken-4 modal-trigger"
                type="submit">{{ 'registration.submit'|trans }}</button>
    </div>
    {{ form_end(form) }}

</div>