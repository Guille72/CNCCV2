{% extends 'admin.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Liste des notes</h1>

        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Propreté</th>
                <th>Accueil</th>
                <th>Confort</th>
                <th>Global</th>
                <th>Créer le</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <td><a href="{{ path('note_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                    <td>{{ note.comm }}</td>
                    <td>{{ note.proprete }}</td>
                    <td>{{ note.accueil }}</td>
                    <td>{{ note.confort }}</td>
                    <td>{{ note.global }}</td>
                    <td>{{ note.created }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('note_show', { 'id': note.id }) }}">Afficher</a>
                            </li>
                            <li>
                                <a href="{{ path('note_edit', { 'id': note.id }) }}">Modifier</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('note_new') }}">Créer une note</a>
            </li>
        </ul>
    </div>
{% endblock %}
