{% extends 'base.html.twig' %}

{% block body %}
    <h1>Logement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logement.id }}</td>
            </tr>
            <tr>
                <th>Personnemax</th>
                <td>{{ logement.personneMax }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ logement.prix }}</td>
            </tr>
            <tr>
                <th>Taxe</th>
                <td>{{ logement.taxe }}</td>
