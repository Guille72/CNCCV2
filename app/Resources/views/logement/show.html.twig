{% extends 'admin.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Logement</h1>

        <table>
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logement.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ logement.adresse }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ logement.localisation }}</td>
            </tr>
            <tr>
                <th>Personnes maximum</th>
                <td>{{ logement.personneMax }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ logement.basePrix ? logement.basePrix.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ logement.description }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('logement_index') }}">Retour Ã  la liste</a>
            </li>
            <li>
                <a href="{{ path('logement_edit', { 'id': logement.id }) }}">Modifier</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
