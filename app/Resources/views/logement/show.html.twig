{% extends 'admin.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Logement</h1>

        <table class="highlight">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ logement.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ logement.adresse }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ logement.localisation }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ logement.ville }}</td>
            </tr>
            <tr>
                <th>Personnes maximum</th>
                <td>{{ logement.personneMax }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ logement.description }}</td>
            </tr>
            <tr>
                <th>Coef. Prix</th>
                <td>{{ logement.coefPrix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ logement.image }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a class="waves-effect waves-light btn btn-align" href="{{ path('logement_edit', { 'id': logement.id }) }}">Modifier</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input class="waves-effect waves-light btn red btn-align" type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </li>
            <li>
                <a class="waves-effect waves-light btn green btn-align" href="{{ path('logement_index') }}">Retour Ã  la liste</a>
            </li>
        </ul>
    </div>
{% endblock %}
