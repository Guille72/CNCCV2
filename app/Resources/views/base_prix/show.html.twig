{% extends 'base.html.twig' %}

{% block body %}
    <h1>Base_prix</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ base_prix.id }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if base_prix.dateDebut %}{{ base_prix.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if base_prix.dateFin %}{{ base_prix.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ base_prix.prix }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ base_prix.lieu }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('base_prix_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('base_prix_edit', { 'id': base_prix.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
