{% extends 'admin.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Modifier la réservation</h1>

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="waves-effect waves-light btn" type="submit" value="Editer"/>
        {{ form_end(edit_form) }}

        <ul>
            <li>
                {{ form_start(delete_form) }}
                <input class="waves-effect waves-light btn red" type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </li>
            <li>
                <a class="waves-effect waves-light btn green btn-align" href="{{ path('reservation_index') }}">Retour à la liste</a>
            </li>
        </ul>
    </div>
{% endblock %}
