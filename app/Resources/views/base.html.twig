<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}CNcCV{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% endblock %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body>
{% block body %}{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/manifest.js') }}"></script>
    <script src="{{ asset('build/vendor.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>

    <!--Google Map, ici pour éviter les conflits-->
    <script>
        function initMap() {
            var leMans = {lat: 47.998880, lng: 0.199025};
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 12,
                center: leMans
            });

            var rousseau = {lat: 47.976987, lng: 0.203185};
            var marker = new google.maps.Marker({
                position: rousseau,
                map: map,
            });

            var champion = {lat: 47.981601, lng: 0.217549};
            var marker2 = new google.maps.Marker({
                position: champion,
                map: map,
            });

            var painleve = {lat: 47.962271, lng: 0.203091};
            var marker3 = new google.maps.Marker({
                position: painleve,
                map: map,
            });

            var rousseauInfo = '<div id="content">' +
                '<div id="siteNotice">' +
                '</div>' +
                '<h1 id="firstHeading" class="firstHeading">Rousseau</h1>' +
                '<div id="bodyContent">' +
                '<p>Salut</p>' +
                '</div>' +
                '</div>';

            var championInfo = '<div id="content">' +
                '<div id="siteNotice">' +
                '</div>' +
                '<h1 id="firstHeading" class="firstHeading">Champion</h1>' +
                '<div id="bodyContent">' +
                '<p>Salut</p>' +
                '</div>' +
                '</div>';

            var painInfo = '<div id="content">' +
                '<div id="siteNotice">' +
                '</div>' +
                '<h1 id="firstHeading" class="firstHeading">Painlevé/h1>' +
                '<div id="bodyContent">' +
                '<p>Salut</p>' +
                '</div>' +
                '</div>';

            var infowindow = new google.maps.InfoWindow({
                content: rousseauInfo
            });

            var infowindow2 = new google.maps.InfoWindow({
                content: championInfo
            });

            var infowindow3 = new google.maps.InfoWindow({
                content: painInfo
            });

            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });

            marker2.addListener('click', function () {
                infowindow2.open(map, marker2);
            });

            marker3.addListener('click', function () {
                infowindow3.open(map, marker3);
            });
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBNiPj_WLCpWCzGKI02mV6ROO_PkwEn3yo&callback=initMap">
    </script>
{% endblock %}
</body>
</html>
